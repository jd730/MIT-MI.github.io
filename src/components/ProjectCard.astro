---
import Link from '@/components/Link.astro'
import AvatarComponent from '@/components/ui/avatar'
import { Badge } from '@/components/ui/badge'
import { parsePeople } from '@/lib/data-utils'
import { formatDate, getAvatarSrc } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
const people = await parsePeople(project.data.people ?? [])
---

<div
  class="hover:ring-primary bg-background rounded-xl border p-4 transition-shadow duration-300 ease-in-out hover:cursor-pointer hover:ring-2"
>
  <Link
    href={`/${project.collection}/${project.id}`}
    class="flex flex-col gap-4 sm:flex-row"
  >
    {
      project.data.image && (
        <div class="w-full sm:max-w-3xs sm:shrink-0">
          <Image
            src={project.data.image}
            alt={project.data.name}
            width={1200}
            height={630}
            class="object-cover"
          />
        </div>
      )
    }
    <div class="grow flex flex-col gap-y-1">
      <h3 class="mb-1 text-lg font-medium">
        {project.data.name}
      </h3>
      <p class="text-muted-foreground mb-2 text-sm">
        {project.data.description}
      </p>
      <div
        class="text-muted-foreground mb-2 flex flex-wrap items-center gap-x-2 text-xs"
      >
        {
          people.length > 0 && (
            <>
              {people.map((person) => (
                <div class="flex items-center gap-x-1.5">
                  <AvatarComponent
                    client:load
                    src={getAvatarSrc(person.avatar)}
                    alt={person.name}
                    fallback={person.name[0]}
                    className="size-5 rounded-full"
                  />
                  <span>{person.name}</span>
                </div>
              ))}
            </>
          )
        }
      </div>
      {
        project.data.startDate && (
            <p class="text-muted-foreground/70 mb-2 flex items-center gap-x-1.5 text-xs">
              <span class="flex items-center gap-x-1.5">
                <Icon name="lucide:calendar" class="size-3" />
                <span>
                  {formatDate(project.data.startDate)}
                  {project.data.endDate
                    ? ` → ${formatDate(project.data.endDate)}`
                    : ' → Present'}
                </span>
              </span>
            </p>
        )
      }
      {
        project.data.tags && (
          <div class="flex flex-wrap gap-2">
            {project.data.tags.map((tag: string) => (
              <Badge variant="muted">{tag}</Badge>
            ))}
          </div>
        )
      }
      {
        project.data.publication && (
            <p class="mb-2 flex items-center gap-x-1.5 text-xs">
              <span class="flex items-center gap-x-1.5">
                <Icon name="lucide:book" class="size-3" />
                <span>{project.data.publication.venue}</span>
              </span>
            </p>
        )
      }
    </div>
  </Link>
</div>
